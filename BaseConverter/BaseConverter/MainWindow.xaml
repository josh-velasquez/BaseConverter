<Window x:Class="BaseConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseConverter"
        mc:Ignorable="d"
        Title="Base Converter" Height="357" Width="818">
    <Grid Background="#FF49A09C">
        <ComboBox x:Name="conversionCombobox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="183" Height="30" />
        <TextBox x:Name="value" HorizontalAlignment="Left" Height="30" Margin="10,50,0,0" TextWrapping="Wrap" Text="Value" VerticalAlignment="Top" Width="486" />
        <Label Content="Result:" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Width="54" Foreground="Black" FontWeight="Bold" FontSize="14" />
        <Button Content="Reset" HorizontalAlignment="Left" Margin="354,10,0,0" VerticalAlignment="Top" Width="142" Height="30" Click="OnResetClick" Background="#FF00ECFF" FontSize="14">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="userGuess" HorizontalAlignment="Left" Height="28" Margin="10,278,0,0" TextWrapping="Wrap" Text="Your guess" VerticalAlignment="Top" Width="324" />
        <Button x:Name="submitAnswer" Content="Check" HorizontalAlignment="Left" Margin="354,278,0,0" VerticalAlignment="Top" Width="142" Height="30" Background="#FF00ECFF" FontSize="14" Click="OnCheckUserGuess">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Instructions:" HorizontalAlignment="Left" Height="30" Margin="511,10,0,0" VerticalAlignment="Top" Width="236" Foreground="Black" FontWeight="Bold" FontSize="14" />
        <ListBox x:Name="instructionsBox" HorizontalAlignment="Left" Height="258" Margin="511,50,0,0" MaxWidth="270" VerticalAlignment="Top" Width="279" ScrollViewer.CanContentScroll="False" UseLayoutRounding="True" />
        <Label Name="stepAnswer" HorizontalAlignment="Left" Margin="61,247,0,0" VerticalAlignment="Top" Width="435" Foreground="White" />
        <ListBox x:Name="stepsBox" HorizontalAlignment="Left" Height="149" VerticalAlignment="Top" Width="486" Margin="10,93,0,0" />
        <Button Content="Convert" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="142" Height="30" Click="OnConvertClick" Background="#FF00ECFF" FontSize="14">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Button.Resources>
        </Button>
        <Image HorizontalAlignment="Left" Height="21" Margin="758,16,0,0" VerticalAlignment="Top" Width="20" Source="help.png" RenderTransformOrigin="0.9,0.321" MouseDown="OnHelpClick" />
    </Grid>
</Window>